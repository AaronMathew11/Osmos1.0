<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Scheduling_fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Choose the problem"/>

        <Button
            android:id="@+id/pro_schedulebutton"
            android:layout_width="250sp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:text="Process Scheduling"
            android:onClick="processcalc"
            android:padding="20sp"
            />
        <Button
            android:id="@+id/pro_manbtn"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Process Management"
            android:padding="20sp"
            />
        <Button
            android:id="@+id/pro_crebtn"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Process Cration"
            android:padding="20sp"
            />
        <Button
            android:id="@+id/mem_manbtn"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Memory Management"
            android:padding="20sp"
            />
        <Button
            android:id="@+id/file_btn"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="File Handling"
            android:padding="20sp"
            />
        <Button
            android:id="@+id/probx_btn"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Problem x"
            android:padding="20sp"
            />
    </LinearLayout>



</FrameLayout>